    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/google-protobuf": "^3.15.3",
        "@types/jest": "^26.0.20",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.31",
