        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.2"
    },
    "scripts": {
        "dev": "ts-node-dev -r tsconfig-paths/register --respawn ./src/cmd/main.ts",
        "client": "ts-node-dev -r tsconfig-paths/register --respawn ./src/cmd/client.ts",
        "test": "jest",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "lint": "eslint .",
        "lint:fix": "eslint ./src --fix",
        "make:proto": "protoc --ts_out=import_style=commonjs,binary:. src/internal/chat-room/infra/grpc/proto/user.proto",
        "make:proto_js": "protoc --js_out=import_style=commonjs,binary:. src/internal/chat-room/infra/grpc/proto/user.proto"
    },
    "jest": {
        "preset": "ts-jest",
        "testMatch": [
            "**/__tests__/**/*.ts?(x)",
            "**/?(*.)+(spec|test).ts?(x)"
        ]
    }
